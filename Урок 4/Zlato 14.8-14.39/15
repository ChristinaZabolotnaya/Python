def perimeter(a, b, h):
    c = ((a-b)/2)**2 + h**2
    c = c ** 0.5
    return a + b + 2*c
a1 = float(input("Введите основание первой трапеции: "))
a2 = float(input("Введите основание второй трапеции: "))
h1 = float(input("Введите высоту первой трапеции: "))
h2 = float(input("Введите высоту второй трапеции: "))
p1 = perimeter(a1, a1, h1)
p2 = perimeter(a2, a2, h2)
sum_p = p1 + p2
print("Сумма периметров равнобедренных трапеций:", sum_p)
