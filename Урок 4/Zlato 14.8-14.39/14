from math import sqrt
def hypotenuse(a, b):
    return (a**2 + b**2) ** 0.5
AB = float(input("Введите длину стороны AB: "))
AD = float(input("Введите длину стороны AD: "))
CD = float(input("Введите длину стороны CD: "))
BC = hypotenuse(AD, CD)
AC = hypotenuse(AB, BC)
perimeter = AB + AD + CD + AC
print("Периметр фигуры ABCD:", perimeter)
