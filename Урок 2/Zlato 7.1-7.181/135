p = int(input("Введите натуральное число p: "))
numbers = []
for i in range(15):
  num = float(input(f"Введите вещественное число {i+1}: "))
  numbers.append(num)
max_number = max(numbers)
min_number = min(numbers)
print(f"Максимальное число: {max_number}")
print(f"Минимальное число: {min_number}")
if max_number > p:
  print(f"Максимальное число {max_number} больше, чем число p")
if min_number < p:
  print(f"Минимальное число {min_number} меньше, чем число p")
