pairs = []
for i in range(5):
  a = float(input(f"Введите первое число в паре {i+1}: "))
  b = float(input(f"Введите второе число в паре {i+1}: "))
  pairs.append((a, b))
sums = [pair[0] + pair[1] for pair in pairs]
max_sum = max(sums)
print(f"Максимальная сумма значений чисел в паре: {max_sum}")
products = [pair[0] * pair[1] for pair in pairs]
min_product = min(products)
print(f"Минимальное произведение значений чисел в паре: {min_product}")
