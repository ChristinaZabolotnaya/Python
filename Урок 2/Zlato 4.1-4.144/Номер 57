a = int(input("Введите неотрицательное целое число - "))
b = int(input("Введите положительное целое число для деления на - "))
c = int(input("Введите первый возможный остаток - "))
d = int(input("Введите второй возможный остаток - "))
if a % b == c or a % b == d:
  print(f"{a} деленное на {b} оставляет остаток {c} или {d}.")
else:
  print(f"{a} деленное на {b} не оставляет остаток {c} или {d}.")
