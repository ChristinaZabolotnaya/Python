n = int(input("Введите натуральное число: "))
max_digit = 0
min_digit = 9
while n > 0:
  digit = n % 10
  if digit > max_digit:
    max_digit = digit
  if digit < min_digit:
    min_digit = digit
  n //= 10
print("Максимальная цифра в числе:", max_digit)
print("Минимальная цифра в числе:", min_digit)
print("Разница между максимальной и минимальной цифрой:", max_digit - min_digit)
print("Сумма максимальной и минимальной цифр:", max_digit + min_digit)
