n = int(input("Введите натуральное число: "))
max_digit = 0
min_digit = 9
while n > 0:
  digit = n % 10
  if digit > max_digit:
    max_digit = digit
  if digit < min_digit:
    min_digit = digit
  n //= 10
if (max_digit - min_digit) % 2 == 0:
  print("Разность максимальной и минимальной цифр четная")
else:
  print("Разность максимальной и минимальной цифр нечетная")
